//extraction of digits

void mth1(int n){
   while(n>0){
       int last_digit;
       last_digit=n%10;
       n=n/10;
       cout<<last_digit<<" ";
   }
}

int main(){
    int n;
    cin>>n;
    mth1(n);
    return 0;
}

output:-
1234
4 3 2 1

//counting the number of digits

void mth1(int n){
    int count=0;
   while(n>0){
       n=n/10;
       count++;
   }
   cout<<count;
}

or,

void mth1(int n){
   int count= (int)(log10(n)+1);
   cout<<count;
}

output:-
21569
5



